{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$ref": "#/definitions/Goats",
  "definitions": {
    "Goats": {
      "title": "Goats",
      "type": "object",
      "properties": {
        "$schema": {
          "description": "Path To This Schema",
          "type": "string",
          "title": "$schema"
        },
        "goats": {
          "description": "Array Of Goats",
          "type": "array",
          "items": {
            "$ref": "#/definitions/Goat"
          },
          "title": "goats"
        }
      },
      "required": [
        "$schema",
        "goats"
      ]
    },
    "Goat": {
      "title": "Goat",
      "type": "object",
      "properties": {
        "nickname": {
          "description": "Short Name",
          "type": "string",
          "title": "nickname"
        },
        "registeredName": {
          "description": "Registered Name (Name On Registration Papers)",
          "type": "string",
          "title": "registeredName"
        },
        "awards": {
          "description": "Any Known Awards",
          "type": "array",
          "items": {
            "$ref": "#/definitions/Award"
          },
          "title": "awards"
        },
        "dam": {
          "$ref": "#/definitions/Parent",
          "title": "dam"
        },
        "sire": {
          "$ref": "#/definitions/Parent",
          "title": "sire"
        },
        "dob": {
          "description": "Date Of Birth",
          "type": "string",
          "title": "dob"
        },
        "color": {
          "description": "Description Found On Registration Papers",
          "type": "string",
          "title": "color"
        },
        "horns": {
          "description": "Horn Type (Polled Or Disbudded)",
          "type": "string",
          "title": "horns"
        },
        "images": {
          "description": "Images (Relative To The assets/images Directory)",
          "type": "array",
          "items": {
            "type": "string"
          },
          "title": "images"
        },
        "description": {
          "description": "Optional Description Of The Goat",
          "type": "string",
          "title": "description"
        }
      },
      "required": [
        "color",
        "dam",
        "dob",
        "horns",
        "nickname",
        "registeredName",
        "sire"
      ]
    },
    "Parent": {
      "title": "Parent",
      "type": "object",
      "properties": {
        "name": {
          "description": "Sire's Name",
          "type": "string",
          "title": "name"
        },
        "sire": {
          "$ref": "#/definitions/Grandparent",
          "description": "Sire's Sire (SS)",
          "title": "sire"
        },
        "dam": {
          "$ref": "#/definitions/Grandparent",
          "description": "Sire's Dam (SD)",
          "title": "dam"
        },
        "DNA": {
          "description": "DNA Tested",
          "type": "boolean",
          "title": "DNA"
        },
        "stars": {
          "description": "Stars",
          "type": "array",
          "items": {
            "type": "string"
          },
          "title": "stars"
        }
      },
      "required": [
        "dam",
        "name",
        "sire"
      ]
    },
    "Grandparent": {
      "title": "Grandparent",
      "type": "object",
      "properties": {
        "name": {
          "description": "Sire's Name",
          "type": "string",
          "title": "name"
        },
        "DNA": {
          "description": "DNA Tested",
          "type": "boolean",
          "title": "DNA"
        },
        "stars": {
          "description": "Stars",
          "type": "array",
          "items": {
            "type": "string"
          },
          "title": "stars"
        }
      },
      "required": [
        "name"
      ]
    },
    "Award": {
      "title": "Award",
      "type": "object",
      "properties": {
        "level": {
          "description": "Award Level (Grand Champion, Reserve Grand Champion, etc.)",
          "type": "string",
          "title": "level"
        },
        "division": {
          "description": "Award Division (Junior Doe, Senior Doe, Breed, etc.)",
          "type": "string",
          "title": "division"
        },
        "event": {
          "description": "Event Name Prefixed By Year (2022 Evergreen State Fair, 2023 Udder Spectacular, etc.)",
          "type": "string",
          "title": "event"
        }
      },
      "required": [
        "division",
        "event",
        "level"
      ]
    }
  }
}
